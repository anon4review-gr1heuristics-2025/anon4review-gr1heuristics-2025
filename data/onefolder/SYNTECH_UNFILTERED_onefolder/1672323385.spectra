import "./imports/DwyerPatterns.spectra"

spec EscapingGuard

define D := 7;

type Dim = Int(0..D);

sys Dim robotX;
sys Dim robotY;



gar robotStartLocation:
	ini robotX = 7 and robotY = 0;

predicate moveDist(Dim x):
	x - next(x) <= 1 and next(x) - x <= 1;
	
gar robotLegalMovement:
	alw moveDist(robotX) and moveDist(robotY);
