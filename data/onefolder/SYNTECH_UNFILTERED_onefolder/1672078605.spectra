import "./imports/DwyerPatterns.spectra"

spec EscapingGuard

define D := 7;

type Dim = Int(0..D);

sys Dim[2] robot;

env Dim[4][2] Obstacles;
env Dim[3][2] targets;

gar alw moveDist(robot[0]);
gar alw moveDist(robot[1]);

gar ini robot[0] = 7;
gar ini robot[1] = 0;

predicate moveDist(Dim pos):
	pos+1 = next (pos) |
	pos = next (pos) |
	pos-1 = next (pos);



