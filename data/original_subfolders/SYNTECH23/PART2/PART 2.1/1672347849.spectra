import "./imports/DwyerPatterns.spectra"

spec EscapingGuard

define D := 7;

type Dim = Int(0..D);

sys Dim robotX;
sys Dim robotY;

//this module will make sure the robot never touches fixed obstacles

gar robotDoesntTouchFixedObstacles:
	alw (robotX != 2 | robotY != 2)
	& (robotX != 2 | robotY != 3)
	& (robotX != 2 | robotY != 4)
	& (robotX != 2 | robotY != 5);